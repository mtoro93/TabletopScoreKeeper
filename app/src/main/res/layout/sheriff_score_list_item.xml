<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp">

    <TextView
        android:id="@+id/sheriff_scoring_item"
        android:layout_width="44dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="12sp"
        android:text="@string/sheriff_apple"/>

    <LinearLayout
        android:id="@+id/sheriff_scoring_player_names"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/sheriff_scoring_item"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/player_one_name_sheriff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P1"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/player_one_score_sheriff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="0"
                android:inputType="number"
                android:imeOptions="actionDone"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/player_two_name_sheriff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P2"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/player_two_score_sheriff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="0"
                android:inputType="number"
                android:imeOptions="actionDone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/player_three_name_sheriff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P3"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/player_three_score_sheriff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="0"
                android:inputType="number"
                android:imeOptions="actionDone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/player_four_name_sheriff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P4"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/player_four_score_sheriff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="0"
                android:inputType="number"
                android:imeOptions="actionDone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/player_five_name_sheriff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P5"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/player_five_score_sheriff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="0"
                android:inputType="number"
                android:imeOptions="actionDone"/>
        </LinearLayout>
    </LinearLayout>





</RelativeLayout>